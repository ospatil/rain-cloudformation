{
  "compilerOptions": {
    "target": "es2022",
    "module":"nodenext",
    "moduleResolution":"nodenext",
    "lib": ["es2022"],
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": true, // Do not emit files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
